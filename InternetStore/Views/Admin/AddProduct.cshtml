@{
    ViewData["Title"] = "Add Page";
}
@model InternetStore.Models.Product
<link rel="stylesheet" href="/css/use.css">
<div class="block">
    <form asp-controller="Admin" asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Назва"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Price" class="form-control" placeholder="Ціна" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Image" type="file" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="submit">
            <button type="submit" class="btn btn-primary">Створити</button>
            <a class="text-button" asp-controller="Admin" asp-action="ManageProducts">Повернутися</a>
        </div>
    </form>
</div>